@import '_settings'
@import '_slyck'

normalize-css()
base()

body
  background: $black
  .stage
    position: relative
    .credits
      width: 80%
      position: absolute
      bottom: 0
      margin: 0 auto
      left: 0
      right: 50px
      z-index: 9999
      text-align: right
      p
        font-family: sans-serif
        color: white
        text-shadow: 1px 1px #000
        a
          color: white
    .photos
      margin: 0 auto
      width: 80%
      .item
        .photo
          width: auto
          height: 100vh
          margin: 0 auto
        .toolbar
          display: block
          position: absolute
          bottom: 10px
          right: 10px
